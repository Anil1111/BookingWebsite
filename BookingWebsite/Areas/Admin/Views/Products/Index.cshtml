@model IEnumerable<BookingWebsite.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<br /><br />



<div class="row">
    <div class="col-6">
        <h2 class="text-info">Property List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Property</a>
    </div>



</div>
<br />
<div>
    <table class="table table-striped">
        <tr class="table-info">
            <th>
                @*Display name from model*@
                @Html.DisplayNameFor(m => m.Name)

            </th>
            <th>
                @*Display name from model*@
                @Html.DisplayNameFor(m => m.Price)

            </th>
            <th>
                @*Display name from model*@
                @Html.DisplayNameFor(m => m.Available)

            </th>
            <th>
                @*Display name from model*@
                @Html.DisplayNameFor(m => m.ProductTypes)

            </th>
            <th>
                @*Display name from model*@
                @Html.DisplayNameFor(m => m.Tags)

            </th>
            <th></th>
            <th></th>
        </tr>
        @*Using for each to retrieve list from database*@
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.DisplayFor(m => item.Available)
            </td>
            <td>
                @Html.DisplayFor(m => item.ProductTypes.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Tags.Name)
            </td>

            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>


        </tr>
        }

    </table>

</div>
